{
  "format": "custom",
  "id": "work",
  "label": "Work",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "images": {
        "type": "Group",
        "config": {
          "label": "Images",
          "repeat": true,
          "fields": {
            "image": {
              "type": "Image",
              "config": {
                "label": "Image",
                "constraint": {},
                "thumbnails": []
              }
            }
          }
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Name your work"
        }
      },
      "category": {
        "type": "Select",
        "config": {
          "label": "Category",
          "placeholder": "",
          "options": ["Residential", "Commercial", "Industrial"],
          "default_value": "Residential"
        }
      },
      "location": {
        "type": "Text",
        "config": {
          "label": "Location",
          "placeholder": "Where the work did ?"
        }
      },
      "capacity": {
        "type": "Text",
        "config": {
          "label": "Capacity",
          "placeholder": "Enter the Capacity (e.g. 100KW)"
        }
      },
      "savings": {
        "type": "Text",
        "config": {
          "label": "Savings",
          "placeholder": "How much customer saves ?(e.g. â‚¹5,00,000 annually)"
        }
      },
      "completion": {
        "type": "Text",
        "config": {
          "label": "Completion",
          "placeholder": "When it was completed ?"
        }
      },
      "shortdesc": {
        "type": "Text",
        "config": {
          "label": "ShortDesc",
          "placeholder": "Write a short description of your work"
        }
      },
      "full_desc": {
        "type": "StructuredText",
        "config": {
          "label": "Full Desc",
          "placeholder": "Write a detailed description about your work",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "details": {
        "type": "Group",
        "config": {
          "label": "Details",
          "repeat": true,
          "fields": {
            "details": {
              "type": "Text",
              "config": {
                "label": "Details",
                "placeholder": "Give some overview details about your work"
              }
            }
          }
        }
      },
      "benefits": {
        "type": "Group",
        "config": {
          "label": "Benefits",
          "repeat": true,
          "fields": {
            "benefit": {
              "type": "Text",
              "config": {
                "label": "Benefit",
                "placeholder": "Write the benefits of your works"
              }
            }
          }
        }
      },
      "timeline": {
        "type": "Group",
        "config": {
          "label": "Timeline",
          "repeat": true,
          "fields": {
            "phase": {
              "type": "Text",
              "config": {
                "label": "Phase",
                "placeholder": "Facility Analysis"
              }
            },
            "duration": {
              "type": "Text",
              "config": {
                "label": "Duration",
                "placeholder": "2-3 Weeks"
              }
            }
          }
        }
      }
    }
  }
}
